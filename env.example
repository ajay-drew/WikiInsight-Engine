# Environment Variables Example
# Copy this file to .env and fill in your values

# API Keys (if needed)
# WIKIPEDIA_API_KEY=

# Database
# Add your own database connection string
# Format: postgresql+asyncpg://user:password@host:port/database
# For Docker: postgresql+asyncpg://postgres:postgres@postgres:5432/wikiinsight
DATABASE_URL=
REDIS_URL=redis://localhost:6379/0

# MLflow
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_EXPERIMENT_NAME=wikiinsight

# DVC Remote Storage (optional)
DVC_REMOTE_URL=
DVC_REMOTE_TYPE=local

# Logging
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=9000

# Dashboard
DASHBOARD_PORT=8505

